.wrapper
  position relative
.default
  display block
  height 38px
  line-height 38px
  width 100%
  padding 0 10px
  font-size 14px
  outline none
  border none
  background #fdfdfd
  &::placeholder
    color #ddd
  &:-ms-input-placeholder
    color #ddd
  &::-ms-input-placeholder
    color #ddd
.normal
  background #fdfdfd
.correct
  background #ECF8F3
.error
  background #FFF4F4

.search
  outline none
  border 1px solid #e7e7e7
  border-radius 3px
  padding-left 30px
  position relative
  width 100%
  height 100%
.searchIcon
  position absolute
  top 50%
  left 2px
  transform translateY(-50%)