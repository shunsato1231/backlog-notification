.base
  cursor pointer
  transition 0.3s
  display block
  border-radius 5px
  border none
  outline none
  font-size 14px
  margin 0 auto
  &:disabled
    pointer-events none

.green
  background #41b289
  color #fff
  &:disabled
    opacity 0.3

.red
  background #ff0000
  color #fff

.small
  width 80px
  height 25px
  font-size 12px

.medium
  width 100px
  height 35px
  font-size 14px

.large
  width 200px
  height 45px
  font-size 18px