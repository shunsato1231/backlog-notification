.wrapper
  position fixed
  top 0
  right 0
  z-index 100
.toast
  margin 10px
  display flex
  background #fff
  width 300px
  height 50px
  padding 5px 15px
  border-radius 3px
  border-left solid 4px #41b289
  box-shadow -3px 3px 15px -6px #888
  align-items center
.toastText
  font-size 12px

.toastEnter
  transform translateX(calc(100% + 20px))
.toastEnterDone
  transition 0.5s
  transform translateX(0)
.toastExit
  transform translateX(0)
.toastExitActive
  transition 0.5s
  transform translateX(calc(100% + 20px))
